<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/flBackground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorCondition">

        <ImageView
            android:id="@+id/ivFeatureIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_homeicon" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvFeatureName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/flBackground"
        app:layout_constraintStart_toStartOf="@+id/flBackground"
        app:layout_constraintTop_toBottomOf="@+id/flBackground"
        android:gravity="center"
        android:textSize="10sp"
        tools:text="Places of interest"/>

</androidx.constraintlayout.widget.ConstraintLayout>