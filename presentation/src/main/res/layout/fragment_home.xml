<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundhome"
    tools:context=".screens.HomeFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Select your Map"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Someethings about the Features"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <me.androidbox.presentation.views.FeatureMapView
        android:id="@+id/mvAddressFinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bottomEndRadius="@dimen/space_8"
        app:bottomStartRadius="@dimen/space_8"
        app:featureBackground="@color/colorCondition"
        app:featureIcon="@drawable/ic_homeicon"
        app:featureName="Address Finder"
        app:featureNameBackground="@android:color/holo_blue_light"
        app:topEndRadius="@dimen/space_8"
        app:topStartRadius="@dimen/space_8"
        tools:ignore="MissingConstraints" />

    <me.androidbox.presentation.views.FeatureMapView
        android:id="@+id/mvCompass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bottomEndRadius="@dimen/space_8"
        app:bottomStartRadius="@dimen/space_8"
        app:featureBackground="@color/colorCondition"
        app:featureIcon="@drawable/ic_compass"
        app:featureName="Compass"
        app:featureNameBackground="@android:color/holo_blue_light"
        app:topEndRadius="@dimen/space_8"
        app:topStartRadius="@dimen/space_8"
        tools:ignore="MissingConstraints" />

    <me.androidbox.presentation.views.FeatureMapView
        android:id="@+id/mvDirections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bottomEndRadius="@dimen/space_8"
        app:bottomStartRadius="@dimen/space_8"
        app:featureBackground="@color/colorCondition"
        app:featureIcon="@drawable/ic_navigation"
        app:featureName="Directions"
        app:featureNameBackground="@android:color/holo_blue_light"
        app:topEndRadius="@dimen/space_8"
        app:topStartRadius="@dimen/space_8"
        tools:ignore="MissingConstraints" />

    <me.androidbox.presentation.views.FeatureMapView
        android:id="@+id/mvLiveTraffic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bottomEndRadius="@dimen/space_8"
        app:bottomStartRadius="@dimen/space_8"
        app:featureBackground="@color/colorCondition"
        app:featureIcon="@drawable/ic_trafficking"
        app:featureName="Live Traffic"
        app:featureNameBackground="@android:color/holo_blue_light"
        app:topEndRadius="@dimen/space_8"
        app:topStartRadius="@dimen/space_8"
        tools:ignore="MissingConstraints" />

    <me.androidbox.presentation.views.FeatureMapView
        android:id="@+id/mvNearMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bottomEndRadius="@dimen/space_8"
        app:bottomStartRadius="@dimen/space_8"
        app:featureBackground="@color/colorCondition"
        app:featureIcon="@drawable/ic_nearme"
        app:featureName="Near Me"
        app:featureNameBackground="@android:color/holo_blue_light"
        app:topEndRadius="@dimen/space_8"
        app:topStartRadius="@dimen/space_8"
        tools:ignore="MissingConstraints" />

    <me.androidbox.presentation.views.FeatureMapView
        android:id="@+id/mvSatellite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bottomEndRadius="@dimen/space_8"
        app:bottomStartRadius="@dimen/space_8"
        app:featureBackground="@color/colorCondition"
        app:featureIcon="@drawable/ic_satellites"
        app:featureName="Satellite Maps"
        app:featureNameBackground="@android:color/holo_blue_light"
        app:topEndRadius="@dimen/space_8"
        app:topStartRadius="@dimen/space_8"
        tools:ignore="MissingConstraints" />

    <me.androidbox.presentation.views.FeatureMapView
        android:id="@+id/mvPlacesOfInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bottomEndRadius="@dimen/space_8"
        app:bottomStartRadius="@dimen/space_8"
        app:featureBackground="@color/colorCondition"
        app:featureIcon="@drawable/ic_placeofinterests"
        app:featureName="Places of Interest"
        app:featureNameBackground="@android:color/holo_blue_light"
        app:topEndRadius="@dimen/space_8"
        app:topStartRadius="@dimen/space_8"
        tools:ignore="MissingConstraints" />

    <me.androidbox.presentation.views.FeatureMapView
        android:id="@+id/mvWalkingMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bottomEndRadius="@dimen/space_8"
        app:bottomStartRadius="@dimen/space_8"
        app:featureBackground="@color/colorCondition"
        app:featureIcon="@drawable/ic_walkingmap"
        app:featureName="Walking maps"
        app:featureNameBackground="@android:color/holo_blue_light"
        app:topEndRadius="@dimen/space_8"
        app:topStartRadius="@dimen/space_8"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:flow_firstHorizontalBias="0"
        app:flow_horizontalAlign="start"
        app:flow_horizontalBias="0"
        app:flow_horizontalGap="38dp"
        app:flow_verticalGap="16dp"
        app:flow_horizontalStyle="packed"
        app:flow_verticalAlign="center"
        app:flow_wrapMode="chain"
        app:constraint_referenced_ids="mvAddressFinder,mvCompass,mvDirections,mvLiveTraffic,mvNearMe,mvSatellite,mvPlacesOfInterest,mvWalkingMaps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>